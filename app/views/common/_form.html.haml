= form_for @video, {:html => {:class => "add-form"}} do |f|
  %ul
    %li
      = f.label :title
      = f.text_field :title, :required => true
    %li
      = f.label "Vimeo Id"
      = f.text_field :vimeoid, :required => true
    %li
      = f.label :type
      = f.text_field :video_type, :required => true
    %li
      = f.label :subject
      = f.text_field :subjects, :required => true
    %li
      = f.label :description
      = f.text_area :description, :as => :text, :required => false, :input_html => {:rows => 10}  
    .form-actions
      = f.submit :class =>'btn btn-primary'